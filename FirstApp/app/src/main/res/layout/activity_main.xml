<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidapps.guti.firstapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.309" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HelloWorld"
        tools:layout_editor_absoluteX="131dp"
        android:layout_marginBottom="78dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2" />

    <GridLayout
        android:layout_width="89dp"
        android:layout_height="277dp"
        android:layout_marginRight="135dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="135dp"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="30"
            android:text="@string/btnSubmitText"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="390dp" />
    </GridLayout>

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="102dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="315dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/btnDecreaseCounter"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.98"
                android:text="@string/btnDecreaseText" />

            <Button
                android:id="@+id/btnIncreaseCounter"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:text="@string/btnIncreaseText" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
